@using MvcPresentationLayer.Models.User
@model IEnumerable<UserSelectViewModel>

@{
    ViewData["Title"] = "Users";
}

<h1>Users</h1>

<p>
    <a class="custom-link" asp-action="Create">Criar Novo</a>
    <a class="custom-link" asp-action="ConsumirApi">  Resetar + consumir</a>
</p>
<table class="table custom-table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Nickname)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CreatedAt)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FavoritesCount)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ReviewsCount)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LastLogin)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nickname)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CreatedAt)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FavoritesCount)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ReviewsCount)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastLogin)
            </td>
            <td>
                    @Html.ActionLink("Edit", "Edit", new {  id=item.Id  })
                <form asp-action="Delete", method="post">
                    <input type="hidden" name="Id" value="@item.Id"/>
                    <input type="submit" value="Delete" class="btn btn-link" /> 
                </form>
            </td>
        </tr>
}
    </tbody>
</table>
