@model MvcPresentationLayer.Models.AnimeModel.AnimesForHomeViewModel


@{
    ViewData["Title"] = "Home Page";
}


<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/css/homeStyles.css" asp-append-version="true" />

</head>
<body>
    <section class="catalog" id="catalog">
        <h3>Favorite mangas</h3>
        <a class="custom-link" asp-area="" asp-action="AllFavorites" asp-controller="Anime">View All</a>
        <hr />
        <div class="card-wrapper">
            @{
                foreach (var item in Model.AnimesFavorites)
                {
                    <div class="card-item">
                        <a class="custom-link" href="/Anime/AnimeOnPage/@item.Id">
                            <img src=@item.AnimePosterImage />
                            <div class="card-content">
                                <h5>@item.canonicalTitle</h5>
                            </div>
                        </a>
                    </div>
                }
            }
        </div>
    </section>
     <section class="catalog" id="catalog">
        <h3>Bycount mangas</h3>
        <a class="custom-link" asp-area="" asp-action="AllFavorites" asp-controller="Anime">View All</a>
        <hr />
        <div class="card-wrapper">
            @{
                foreach (var item in Model.AnimesByCount)
                {
                    <div class="card-item">
                        <a class="custom-link" href="/Anime/AnimeOnPage/@item.Id">
                            <img src=@item.AnimePosterImage />
                            <div class="card-content">
                                <h5>@item.canonicalTitle</h5>
                            </div>
                        </a>
                    </div>
                }
            }
        </div>
    </section>
     <section class="catalog" id="catalog">
        <h3>Rating mangas</h3>
        <a class="custom-link" asp-area="" asp-action="AllFavorites" asp-controller="Anime">View All</a>
        <hr />
        <div class="card-wrapper">
            @{
                foreach (var item in Model.AnimesByRating)
                {
                    <div class="card-item">
                        <a class="custom-link" href="/Anime/AnimeOnPage/@item.Id">
                            <img src=@item.AnimePosterImage />
                            <div class="card-content">
                                <h5>@item.canonicalTitle</h5>
                            </div>
                        </a>
                    </div>
                }
            }
        </div>
    </section>

</body>
</html>
